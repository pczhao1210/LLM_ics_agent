{
  "api": {
    "host": "0.0.0.0",
    "port": 8000
  },
  "frontend": {
    "host": "0.0.0.0",
    "port": 8501
  },
  "openai": {
    "api_key": "your_openai_api_key_here",
    "base_url": "https://api.openai.com/v1",
    "model": "gpt-4-vision-preview",
    "max_tokens": 1000,
    "available_models": [
      "gpt-4-vision-preview",
      "gpt-4o",
      "gpt-4o-mini"
    ]
  },
  "storage": {
    "path": "./storage",
    "max_file_size": 10485760
  },
  "image_processing": {
    "resize": true,
    "max_width": 1024,
    "max_height": 1024,
    "quality": 85,
    "format": "JPEG",
    "auto_rotate": true,
    "denoise": false
  },
  "async": {
    "enabled": true,
    "max_workers": 4
  },
  "timezone": {
    "default": "Asia/Shanghai"
  },
  "ics": {
    "reminder_hours": {
      "flight": 2,
      "train": 1,
      "concert": 1,
      "theater": 1,
      "generic": 1
    }
  }
}